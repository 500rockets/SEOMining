# Database
DATABASE_URL=postgresql://seo_user:seo_password@localhost:5432/seo_mining

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# ValueSerp API
VALUESERP_API_KEY=your_api_key_here

# OpenAI API (optional, for toggle)
OPENAI_API_KEY=your_openai_key_here

# Embedding Strategy
USE_LOCAL_GPU=true
USE_OPENAI_EMBEDDINGS=false
OPENAI_MODEL=text-embedding-3-large
SENTENCE_TRANSFORMER_MODEL=all-mpnet-base-v2

# GPU Settings (for Windows machine)
GPU_BATCH_SIZE=64
CUDA_VISIBLE_DEVICES=0

# Proxy Configuration
USE_PROXIES=true
PROXY_FILE=config/proxies.txt
DISABLE_DIRECT_CONNECTION=true

# Storage
BASE_DATA_DIR=./data
PROJECT_NAME=default_project

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Bulk Analysis
BULK_ANALYSIS_OUTPUT_DIR=./output/bulk
BULK_ANALYSIS_CONCURRENCY=3

# Logging
LOG_LEVEL=INFO

